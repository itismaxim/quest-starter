<% if (QuestStarter.currentUser) { %>
  <% if (QuestStarter.currentUser.id === comment.get('user_id')) { %>
    <div class="corner-button delete-button-smaller"> ✗ </div>
    <div class="corner-button edit-button-smaller"> Edit </div>
  <% } else if (QuestStarter.currentUser.id === comment.get('author_of_game')) { %>
    <div class="corner-button delete-button-smaller"> ✗ </div>
  <% } %>
<% } %>

<div class="comment-author"><%= comment.escape('poster_name') %></div>

<div class="">
  <div class="mini-line-break left">----- tiny text ----</div>
  <div class="date left"><%= comment.escape('created_at').slice(0,10) %></div>
  <div class="mini-line-break left">----- tiny text ----</div>
  <br style="clear: left;" />
</div>

<pre class="comment-body">
<%= comment.escape('text') %>
</pre>
